<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#629260"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Nombre" />

        <TextView
            android:id="@+id/Edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Edad" />

        <TextView
            android:id="@+id/Dorsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Dorsal" />

        <Button
            android:id="@+id/editarJugador"
            android:layout_width="10dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:backgroundTint="#629260"
            android:drawableBottom="@drawable/ic_lapiz" />

        <Button
            android:id="@+id/borrarJugador"
            android:layout_width="10dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:backgroundTint="#629260"
            android:drawableBottom="@drawable/ic_papelera" />


    </LinearLayout>

</androidx.cardview.widget.CardView>