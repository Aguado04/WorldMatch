<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#629260"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#629260"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ligaFavorito"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:backgroundTint="#629260"
                android:drawableRight="@drawable/ic_star"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#629260"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/FotoLiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#629260"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/NombreLiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Nombre de la Liga"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#629260">

            <Button
                android:id="@+id/equipos"
                android:layout_width="wrap_content"
                android:drawableBottom="@drawable/ic_arrow"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#629260"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>